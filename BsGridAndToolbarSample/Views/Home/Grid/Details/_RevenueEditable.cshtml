@using BForms.Html
@using BForms.Models
@model MyGrid.Models.MovieDetailsModel

@using (Html.BsBeginForm())
{
    <div class="col-12 col-sm-12 col-lg-12 form-group @Html.BsValidationCssFor(m => m.WeekendRevenue)">
        @Html.BsLabelFor(m => m.WeekendRevenue)
        <div class="input-group">
            @Html.BsGlyphiconAddon(Glyphicon.Euro)
            @Html.BsInputFor(m => m.WeekendRevenue)
            @Html.BsValidationFor(m => m.WeekendRevenue)
        </div>
    </div>
    
    <div class="col-12 col-sm-12 col-lg-12 form-group @Html.BsValidationCssFor(m => m.GrossRevenue)">
        @Html.BsLabelFor(m => m.GrossRevenue)
        <div class="input-group">
            @Html.BsGlyphiconAddon(Glyphicon.Euro)
            @Html.BsInputFor(m => m.GrossRevenue)
            @Html.BsValidationFor(m => m.GrossRevenue)
        </div>
    </div>
    
    <div class="col-12 col-sm-12 col-lg-12 form-group @Html.BsValidationCssFor(m => m.ReleaseDate)">
        @Html.BsLabelFor(m => m.ReleaseDate)
        <div class="input-group">
            @Html.BsGlyphiconAddon(Glyphicon.Calendar)
            @Html.BsInputFor(m => m.ReleaseDate)
            @Html.BsValidationFor(m => m.ReleaseDate)
        </div>
    </div>
}