@model MyGrid.Models.MoviesViewModel
@using BForms.Html

@{
    ViewBag.Title = "Movies Grid";
}


@using (Html.BsGridWrapper())
{
    @Html.Partial("Toolbar/_Toolbar", Model)
    
    @Html.Partial("Grid/_Grid", Model)
}

<div class="popover fade bottom in">
    <div class="arrow"></div>
    <div class="popover-content">
        <p>Are you sure you want to delete this record?</p>
        <hr />
        <button type="button" class="btn btn-primary bs-confirm">Yes</button>
        <button type="button" class="btn btn-default bs-cancel">No</button>
    </div>
</div>